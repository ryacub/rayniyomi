<?xml version="1.0" encoding="utf-8"?>
<!--
  Fork compliance - Firebase configuration for this fork.

  This file documents Firebase configuration:
  - Firebase Analytics: ENABLED (tracks app usage and feature adoption)
  - Firebase Crashlytics: ENABLED (monitors app crashes)

  This fork uses its own Firebase project (rayniyomi) to prevent upstream data pollution.
  See: docs/adr/0002-fork-isolation-updates-and-telemetry.md
-->
<resources>
    <!-- Enable Firebase Analytics collection -->
    <bool name="firebase_analytics_collection_enabled" translatable="false">true</bool>
    <bool name="firebase_analytics_collection_deactivated" translatable="false">false</bool>

    <!-- Enable advertising ID collection for attribution (optional) -->
    <bool name="google_analytics_adid_collection_enabled" translatable="false">true</bool>

    <!-- Disable SSAID collection (privacy-friendly) -->
    <bool name="google_analytics_ssaid_collection_enabled" translatable="false">false</bool>

    <!-- Enable Firebase Crashlytics for crash monitoring -->
    <bool name="firebase_crashlytics_collection_enabled" translatable="false">true</bool>
    <bool name="firebase_crashlytics_collection_deactivated" translatable="false">false</bool>
</resources>
